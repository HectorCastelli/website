---
import Resume from "@layouts/Resume.astro";
import { getCollection } from "astro:content";

const data = {
  title: "Curriculum Vitae",
  description: "A written summary of my career and accomplishments",
};

const experience = await getCollection("resume-experience");

const education = await getCollection("resume-education");

const awards = await getCollection("resume-award");

const skills = await getCollection("resume-skill");
---

<Resume
  title="Curriculum Vitae"
  experience={experience}
  education={education}
  awards={awards}
  skills={skills}
/>
