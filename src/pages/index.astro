---
import TagCloud from "../components/TagCloud.astro";
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout>
	<main
		class="max-w-screen-xl mx-auto h-screen p-11 flex flex-row-reverse gap-x-6 items-center"
	>
		<section>
			<h3 class="text-3xl mb-2 font-thin tracking-tight">
				Welcome to my personal website!
			</h3>
			<h1 class="text-8xl mb-8 font-extrabold tracking-wide">
				I am Hector.
			</h1>
			<p class="text-xl text-justify tracking-tight">
				I am a maker that enjoys the software craft, as well as some
				other topics, such as:
			</p>
			<TagCloud />
			<p class="mt-4">
				Also, while you are here, feel free to read <a
					href="/blog"
					class="text-cyan-900 hover:text-cyan-700">my blog</a
				>.
			</p>
		</section>
		<section>
			<img
				src="/avatar.jpg"
				class="w-[40vw] aspect-square rounded-full object-contain ring-stone-400 ring-4 hover:ring-offset-2 hover:ring-8 transition-shadow duration-500"
			/>
		</section>
	</main>
</BaseLayout>
