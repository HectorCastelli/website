---
import TagCloud from "../components/TagCloud.astro";
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout>
	<main
		class="lg:max-w-screen-xl mx-auto h-max p-4 md:p-11 flex flex-col-reverse lg:flex-row-reverse gap-y-20 lg:gap-y-4 lg:gap-x-6 justify-end lg:justify-center items-center"
	>
		<section>
			<h3 class="text-lg md:text-3xl mb-2 font-thin tracking-tight">
				Welcome to my personal website!
			</h3>
			<h1 class="text-8xl mb-8 font-extrabold tracking-wide">
				I am Hector.
			</h1>
			<p class="text-lg md:text-xl text-justify tracking-tight">
				I am a maker that enjoys the software craft, as well as some
				other topics, such as:
			</p>
			<TagCloud />
			<p class="mt-4">
				Also, while you are here, feel free to read <a
					href="/blog"
					class="text-cyan-900 hover:text-cyan-700 dark:text-cyan-200 dark:hover:text-cyan-400"
					>my blog</a
				>.
			</p>
		</section>
		<section>
			<img
				src="/avatar.jpg"
				alt="a cartoonized depiction of the author"
				class="w-[40vw] aspect-square rounded-full object-contain ring-stone-400 ring-4 hover:ring-8 transition-shadow duration-500"
			/>
		</section>
	</main>
</BaseLayout>
