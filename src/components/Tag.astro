---
import { getTag } from "@lib/tags";
import Link from "./Link.astro";

interface Props {
  tag: string;
  suffix?: string;
}

const { tag, suffix } = Astro.props;

const tagEntry = await getTag(tag);
---

{tagEntry ? <Link href={`/tags/${tagEntry?.slug}`}>{tagEntry?.data.name}{suffix}</Link> : ""}
