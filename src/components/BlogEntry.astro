---
import type { CollectionEntry } from "astro:content";
import Tag from "@components/Tag.astro";

interface Props {
    entry: CollectionEntry<"blog">;
}

const { entry } = Astro.props;
---

<article class="border-slate-800 dark:border-slate-200 border-l-8 p-4">
    <header>
        <h1 class="text-lg"><a class="text-cyan-900 hover:text-cyan-700 dark:text-cyan-200 dark:hover:text-cyan-400" href={`/blog/${entry.slug}`}>{entry.data.title}</a></h1>
        <h3 class="text-sm font-thin">{entry.data.pubDate.toDateString()}</h3>
        <ul class="flex flex-row flex-wrap gap-4 align-middle">
            {
                entry.data.tags.map((tag) => (
                    <li class="p-1 bg-cyan-100 dark:bg-cyan-900 rounded-sm">
                        <Tag tag={tag} />
                    </li>
                ))
            }
        </ul>
    </header>
    {entry.data.description ? <p>{entry.data.description}</p> : ""}
</article>
