---
import config from "@config";
import Link from "@components/Link.astro";
const { links } = config.header;
---

<header
  class="max-w-xl mx-auto p-6 py-12 text-neutral-50 text-xl font-bold tracking-wider"
>
  <nav class="flex justify-center gap-4" title="main navigation">
    {links.map((link) => <Link href={link.href}>{link.text}</Link>)}
  </nav>
</header>
