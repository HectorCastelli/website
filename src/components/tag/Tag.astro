---
import { getTag } from "@lib/tags";
import Link from "@components/link/Link.astro";

interface Props {
  tag: string;
  suffix?: string;
}

const { tag, suffix } = Astro.props;

const tagEntry = await getTag(tag);
---

{
  tagEntry ? (
    <Link href={`/tag/${tagEntry?.slug}`}>
      {tagEntry?.data.title}
      {suffix}
    </Link>
  ) : (
    ""
  )
}
