{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@components/*": [
        "src/components/*"
      ],
      "@layouts/*": [
        "src/layouts/*"
      ],
      "@lib/*": [
        "src/lib/*"
      ],
      "@config": [
        "src/config"
      ],
      "@pages/*": [
        "src/pages/*"
      ],
    },
    "types": [
      "vitest/importMeta",
      "cypress",
      "cypress-axe"
    ]
  }
}